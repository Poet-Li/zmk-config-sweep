#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

#define Default_layer 0

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "homerow mods";
            #binding-cells = <2>;
            tapping_term_ms = <200>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };

    combos {
        compatible = "zmk,combos";

        forty2thirty {
            bindings = <&tog 4>;
            key-positions = <11 23 35>;
        };

        tab {
            bindings = <&kp TAB>;
            key-positions = <13 14>;
        };

        f1 {
            bindings = <&kp F1>;
            key-positions = <1 13>;
        };

        f2 {
            bindings = <&kp F2>;
            key-positions = <2 14>;
        };

        f3 {
            bindings = <&kp F3>;
            key-positions = <3 15>;
        };

        f4 {
            bindings = <&kp F4>;
            key-positions = <4 16>;
        };

        f5 {
            bindings = <&kp F5>;
            key-positions = <5 17>;
        };

        f6 {
            bindings = <&kp F6>;
            key-positions = <6 18>;
        };

        f7 {
            bindings = <&kp F7>;
            key-positions = <7 19>;
        };

        f8 {
            bindings = <&kp F8>;
            key-positions = <8 20>;
        };

        f9 {
            bindings = <&kp F9>;
            key-positions = <9 21>;
        };

        f10 {
            bindings = <&kp F10>;
            key-positions = <10 22>;
        };

        f11 {
            bindings = <&kp F11>;
            key-positions = <13 25>;
        };

        f12 {
            bindings = <&kp F12>;
            key-positions = <14 26>;
        };

        home {
            bindings = <&kp HOME>;
            key-positions = <25 26>;
        };

        end {
            bindings = <&kp END>;
            key-positions = <26 27>;
        };

        pgup {
            bindings = <&kp PG_UP>;
            key-positions = <27 28>;
        };

        pgdn {
            bindings = <&kp PG_DN>;
            key-positions = <28 29>;
        };

        esc {
            bindings = <&kp ESC>;
            key-positions = <1 2>;
        };

        shift {
            bindings = <&kp LEFT_SHIFT>;
            key-positions = <13 22>;
        };

        ctrl {
            bindings = <&kp LCTRL>;
            key-positions = <14 21>;
        };

        gui {
            bindings = <&kp LEFT_GUI>;
            key-positions = <15 20>;
        };

        alt {
            bindings = <&kp LEFT_ALT>;
            key-positions = <16 19>;
